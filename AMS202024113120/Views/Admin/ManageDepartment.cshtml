@model IEnumerable<AMS202024113120.Models.Department>
@{
    ViewData["Title"] = "管理部门";
}

<div class="container mt-5 mb-5">
    <h3>部门管理</h3>
    @{
        if (Model != null)
        {
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <td>部门编号</td>
                        <td>部门名称</td>
                        <td>部门主管</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.DepartmentId
                            </td>
                            <td>
                                @item.DepartmentName
                            </td>
                            <td>@item.Manager.EmployeeId</td>
                            <td>
                                <a href="/Admin/EditDepartment?id=@item.DepartmentId" class="btn btn-sm btn-outline-primary">修改</a>
                                <a href="/Admin/DeleteDepartment?id=@item.DepartmentId" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('确定要删  @item.DepartmentId - @item.DepartmentName 吗?');">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>
