@model IEnumerable<AMS202024113120.Models.Employee>
@{
    ViewData["Title"] = "管理员工页面";
}

<div class="container mt-5 mb-5">
    <h3>员工管理</h3>
    @{
        if (Model != null)
        {
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <td>员工编号</td>
                        <td>员工姓名</td>
                        <td>联系电话</td>
                        <td>员工身份</td>
                        <td>所属部门</td>
                        <td>操作</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Role</td>
                            <td>@item.Department.DepartmentName</td>
                            <td>
                                <a href="/Admin/EditEmployee?id=@item.EmployeeId" class="btn btn-sm btn-outline-primary">修改</a>
                                <a href="/Admin/DeleteEmployee?id=@item.EmployeeId" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('确定要删  @item.EmployeeId - @item.Name 吗?');">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>
