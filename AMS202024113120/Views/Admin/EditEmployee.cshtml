@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using AMS202024113120.Models
@model AMS202024113120.Models.Employee
@inject AssetContext _context
@{
    ViewData["Title"] = "添加员工";
    var department = _context.Departments.ToList();
}
<div class="container mt-5 mb-5">
    <h3>修改员工信息</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditEmployee">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">员工名称</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label">账户密码</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">手机号码</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    员工类型
                    <select asp-for="Role" class="form-select">
                        <option value="Admin">管理员</option>
                        <option value="Member">普通员工</option>
                    </select>
                </div><br />
                <div class="form-group">
                    所属部门
                    <select asp-for="DepartmentId" class="form-select">
                        @foreach (var item in department)
                        {
                            <option value="@item.DepartmentId">@item.DepartmentName</option>
                        }
                    </select>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="修改" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>