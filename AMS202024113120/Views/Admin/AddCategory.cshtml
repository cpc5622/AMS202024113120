@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model AMS202024113120.Models.AssetCategory
@{
    ViewData["Title"] = "添加资产类别";
}
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="container mt-5 mb-5">
    <h3>添加类别</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="@Url.Action("AddCategory")" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger" />
                <div class="form-group">
                    <!--描述-->
                    <label asp-for="CategoryName" class="control-label">资产类别名称</label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <!--描述-->
                    <label asp-for="Description" class="control-label">资产类别描述</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="提交" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
