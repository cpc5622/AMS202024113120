@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using AMS202024113120.Models
@model AMS202024113120.Models.Department
@inject AssetContext _context
@{
    ViewData["Title"] = "部门类别";
    var manager = _context.Employees.ToList();
}
<div class="container mt-5 mb-5">
    <h3>添加部门</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="@Url.Action("AddDepartment")" enctype="multipart/form-data">
                <div class="form-group">
                    <!--描述-->
                    <label asp-for="DepartmentName" class="control-label">部门名称</label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <!--类别-->
                    部门主管
                    <select asp-for="ManagerId" class="form-select">
                        @foreach (var item in manager)
                        {
                            <option value="@item.EmployeeId">@item.Name</option>
                        }
                    </select>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="提交" class="btn btn-primary" />
                </div>
                </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>