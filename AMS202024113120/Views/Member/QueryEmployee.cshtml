@model IEnumerable<AMS202024113120.Models.Employee>
@{
    ViewData["Title"] = "查询";
}

<div class="container mt-5 mb-5">
    <h3>员工查询</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="QueryAssetCategory" method="get">
                <div>
                    <label for="Name">按员工姓名:</label>
                    <input type="text" id="Name" name="Name" />
                </div>
                <div>
                    <label for="Role">按员工身份:</label>
                    <input type="text" id="Role" name="Role" />
                </div>
                <div>
                    <label for="DepartmentName">按所属部门:</label>
                    <input type="text" id="DepartmentName" name="DepartmentName" />
                </div><br />
                <button type="submit" class="btn btn-primary">搜索</button>
            </form>
        </div>
    </div>
    <br />
    @{
        if (Model != null)
        {
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <td>员工编号</td>
                        <td>员工姓名</td>
                        <td>联系电话</td>
                        <td>员工身份</td>
                        <td>所属部门</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>@item.Name</td>
                            <td>@item.Phone</td>
                            <td>@item.Role</td>
                            <td>@item.Department.DepartmentName</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>
